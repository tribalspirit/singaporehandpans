{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    
    // Enable source maps for debugging
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "declarationMap": true,
    
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/layouts/*": ["src/layouts/*"],
      "@/styles/*": ["src/styles/*"],
      "@/utils/*": ["src/utils/*"]
    }
  }
}

---
import type { EventStory } from '../../types/event';

export interface Props {
  event: EventStory;
}

const { event } = Astro.props;
const status = event.content.sold_out_override
  ? 'sold_out'
  : event.content.availability_status || 'available';
const isSoldOut = status === 'sold_out';

const eventDate = new Date(event.content.date);
const month = eventDate
  .toLocaleDateString('en-SG', { month: 'short' })
  .toUpperCase();
const day = eventDate.getDate();

const eventUrl = `/events/${event.slug}`;

const availabilityLabel: Record<string, string> = {
  available: 'Available',
  few_spots: 'Few Spots Left',
  sold_out: 'Sold Out',
};

const imageUrl = event.content.image?.filename
  ? `${event.content.image.filename}/m/600x400/smart`
  : null;
---

<article
  class="home-event-card"
  data-acuity-class-id={event.content.acuity_class_id || undefined}
  data-acuity-appointment-type-id={event.content.acuity_appointment_type_id ||
    undefined}
>
  <a href={eventUrl} class="home-event-card__image-link">
    <div class="home-event-card__image-wrapper">
      {
        imageUrl ? (
          <img
            src={imageUrl}
            alt={event.content.image?.alt || event.content.title}
            class="home-event-card__image"
            loading="lazy"
            width="600"
            height="400"
          />
        ) : (
          <div class="home-event-card__placeholder">
            <svg
              width="48"
              height="48"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
            >
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2" />
              <line x1="16" y1="2" x2="16" y2="6" />
              <line x1="8" y1="2" x2="8" y2="6" />
              <line x1="3" y1="10" x2="21" y2="10" />
            </svg>
          </div>
        )
      }

      <div class="home-event-card__date-badge">
        <span class="home-event-card__date-month">{month}</span>
        <span class="home-event-card__date-day">{day}</span>
      </div>
    </div>
  </a>

  <div class="home-event-card__body">
    <h3 class="home-event-card__title">
      <a href={eventUrl}>{event.content.title}</a>
    </h3>

    <div class="home-event-card__location">
      <svg
        width="14"
        height="14"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
      >
        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
        <circle cx="12" cy="10" r="3"></circle>
      </svg>
      <span>{event.content.location}</span>
    </div>

    <p class="home-event-card__description">{event.content.description}</p>

    {
      event.content.spots_remaining != null &&
        event.content.spots_remaining > 0 &&
        !isSoldOut && (
          <p class="home-event-card__spots" data-spots-remaining>
            {event.content.spots_remaining} spot
            {event.content.spots_remaining === 1 ? '' : 's'} left
          </p>
        )
    }
  </div>

  <div class="home-event-card__footer">
    <div
      class={`home-event-card__availability home-event-card__availability--${status}`}
    >
      <span class="home-event-card__availability-dot" data-availability-dot
      ></span>
      <span data-availability-badge>{availabilityLabel[status]}</span>
    </div>

    {
      isSoldOut ? (
        <span
          class="home-event-card__cta home-event-card__cta--disabled"
          data-booking-cta
        >
          Sold Out
        </span>
      ) : event.content.booking_url ? (
        <a
          href={event.content.booking_url}
          class="home-event-card__cta"
          target="_blank"
          rel="noopener noreferrer"
          data-booking-cta
        >
          Book Now
        </a>
      ) : (
        <a href={eventUrl} class="home-event-card__cta" data-booking-cta>
          Learn More
        </a>
      )
    }
  </div>
</article>

<style lang="scss">
  .home-event-card {
    background: var(--color-white);
    border-radius: var(--radius-2xl);
    box-shadow: var(--shadow-md);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;

    &:hover {
      transform: translateY(-6px);
      box-shadow: var(--shadow-xl);
    }
  }

  .home-event-card__image-link {
    display: block;
    text-decoration: none;
  }

  .home-event-card__image-wrapper {
    position: relative;
    height: 220px;
    overflow: hidden;
    background: var(--color-gray-100);
  }

  .home-event-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;

    .home-event-card:hover & {
      transform: scale(1.05);
    }
  }

  .home-event-card__placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    color: var(--color-gray-400);
    background: linear-gradient(
      135deg,
      var(--color-gray-100),
      var(--color-gray-200)
    );
  }

  .home-event-card__date-badge {
    position: absolute;
    top: var(--space-3);
    left: var(--space-3);
    background: var(--color-white);
    border-radius: var(--radius-lg);
    padding: var(--space-1) var(--space-3);
    text-align: center;
    box-shadow: var(--shadow-md);
    line-height: 1.1;
    min-width: 52px;
  }

  .home-event-card__date-month {
    display: block;
    font-size: 11px;
    font-weight: var(--font-weight-semibold);
    color: var(--color-primary);
    letter-spacing: 0.05em;
  }

  .home-event-card__date-day {
    display: block;
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-gray-900);
  }

  .home-event-card__body {
    padding: var(--space-5) var(--space-5) 0;
    flex: 1;
  }

  .home-event-card__title {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    margin: 0 0 var(--space-2);
    line-height: var(--line-height-tight);

    a {
      color: var(--color-gray-900);
      text-decoration: none;

      &:hover {
        color: var(--color-primary);
      }
    }
  }

  .home-event-card__location {
    display: flex;
    align-items: center;
    gap: var(--space-1);
    font-size: var(--font-size-sm);
    color: var(--color-gray-500);
    margin-bottom: var(--space-3);

    svg {
      flex-shrink: 0;
      color: var(--color-primary);
    }
  }

  .home-event-card__description {
    font-size: var(--font-size-sm);
    color: var(--color-gray-600);
    line-height: var(--line-height-relaxed);
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .home-event-card__spots {
    font-size: var(--font-size-sm);
    color: var(--color-warning, #f39c12);
    font-weight: var(--font-weight-medium);
    margin: var(--space-2) 0 0;
  }

  .home-event-card__footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-4) var(--space-5);
    margin-top: auto;
    border-top: 1px solid var(--color-gray-100);
  }

  .home-event-card__availability {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    color: var(--color-gray-600);
  }

  .home-event-card__availability-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    flex-shrink: 0;

    .home-event-card__availability--available & {
      background-color: var(--color-success);
    }

    .home-event-card__availability--few_spots & {
      background-color: var(--color-warning);
    }

    .home-event-card__availability--sold_out & {
      background-color: var(--color-error);
    }
  }

  .home-event-card__cta {
    display: inline-flex;
    align-items: center;
    padding: var(--space-2) var(--space-4);
    border-radius: var(--radius-md);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    text-decoration: none;
    background-color: var(--color-primary);
    color: var(--color-white);
    transition: background-color 0.2s ease;

    &:hover {
      background-color: var(--color-primary-dark);
    }

    &--disabled {
      background-color: var(--color-gray-300);
      color: var(--color-gray-500);
      cursor: not-allowed;
      pointer-events: none;
    }
  }
</style>

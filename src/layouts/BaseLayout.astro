---
import SEO, { type SEOProps } from '../components/SEO.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.scss';

export interface BaseLayoutProps {
  title: string;
  description: string;
  canonical?: string;
  image?: string;
  imageAlt?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  modifiedTime?: string;
  bodyClass?: string;
}

const {
  title,
  description,
  canonical,
  image,
  imageAlt,
  type = 'website',
  publishedTime,
  modifiedTime,
  bodyClass = '',
} = Astro.props as BaseLayoutProps;

const seoProps: SEOProps = {
  title,
  description,
  canonical,
  image,
  imageAlt,
  type,
  publishedTime,
  modifiedTime,
};
---

<!DOCTYPE html>
<html lang="en">
<head>
  <SEO {...seoProps} />
</head>

<body class={`layout ${bodyClass}`}>
  <!-- Skip to main content for accessibility -->
  <a href="#main-content" class="skip-link">
    Skip to main content
  </a>

  <!-- Page wrapper for sticky footer -->
  <div class="page-wrapper">
    <Header />
    
    <main id="main-content" class="main-content">
      <slot />
    </main>
    
    <Footer />
  </div>

  <!-- Loading indicator for better UX -->
  <div id="loading-indicator" class="loading-indicator" aria-hidden="true">
    <div class="loading-spinner">
      <svg class="spinner" viewBox="0 0 50 50">
        <circle
          class="path"
          cx="25"
          cy="25" 
          r="20"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-miterlimit="10"
        />
      </svg>
    </div>
  </div>
</body>

<style lang="scss">
html {
  height: 100%;
}

body {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.page-wrapper {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.main-content {
  flex: 1;
  width: 100%;
}

// Loading indicator styles
.loading-indicator {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: var(--z-index-modal);
  opacity: 0;
  visibility: hidden;
  transition: opacity var(--transition-fast), visibility var(--transition-fast);

  &.loading {
    opacity: 1;
    visibility: visible;
  }
}

.loading-spinner {
  color: var(--color-primary);
}

.spinner {
  width: 50px;
  height: 50px;
  animation: rotate 2s linear infinite;
}

.path {
  stroke-dasharray: 90, 150;
  stroke-dashoffset: 0;
  stroke-linecap: round;
  animation: dash 1.5s ease-in-out infinite;
}

@keyframes rotate {
  100% {
    transform: rotate(360deg);
  }
}

@keyframes dash {
  0% {
    stroke-dasharray: 1, 150;
    stroke-dashoffset: 0;
  }
  50% {
    stroke-dasharray: 90, 150;
    stroke-dashoffset: -35;
  }
  100% {
    stroke-dasharray: 90, 150;
    stroke-dashoffset: -124;
  }
}

// Page transition animations
@media (prefers-reduced-motion: no-preference) {
  .page-enter {
    opacity: 0;
    transform: translateY(20px);
  }
  
  .page-enter-active {
    opacity: 1;
    transform: translateY(0);
    transition: opacity 0.3s ease-out, transform 0.3s ease-out;
  }
}

// Print styles
@media print {
  .loading-indicator,
  .skip-link {
    display: none !important;
  }
  
  .page-wrapper {
    min-height: auto;
  }
}
</style>

<script>
// Enhanced page loading and navigation experience
document.addEventListener('DOMContentLoaded', () => {
  const loadingIndicator = document.getElementById('loading-indicator');
  
  // Hide loading indicator immediately for static pages
  if (loadingIndicator) {
    loadingIndicator.classList.remove('loading');
  }
  
  // Hide loading indicator once page is fully loaded (fallback)
  window.addEventListener('load', () => {
    if (loadingIndicator) {
      loadingIndicator.classList.remove('loading');
    }
  });

  // Handle browser back/forward navigation (pageshow event)
  window.addEventListener('pageshow', (e) => {
    if (loadingIndicator) {
      loadingIndicator.classList.remove('loading');
    }
  });

  // Page visibility API for better performance
  document.addEventListener('visibilitychange', () => {
    if (document.hidden) {
      // Page is hidden, pause animations/reduce activity
      document.body.classList.add('page-hidden');
    } else {
      // Page is visible, resume normal activity
      document.body.classList.remove('page-hidden');
    }
  });

  // Add page enter animation
  if (window.matchMedia('(prefers-reduced-motion: no-preference)').matches) {
    document.body.classList.add('page-enter');
    
    requestAnimationFrame(() => {
      document.body.classList.add('page-enter-active');
      document.body.classList.remove('page-enter');
    });
  }

  // Enhanced focus management for accessibility
  let lastFocusedElement: HTMLElement | null = null;
  
  document.addEventListener('focusin', (e) => {
    lastFocusedElement = e.target as HTMLElement;
  });

  // Handle keyboard navigation
  document.addEventListener('keydown', (e) => {
    // ESC key handling for modals/menus
    if (e.key === 'Escape') {
      const openMenu = document.querySelector('[data-mobile-menu].open');
      if (openMenu) {
        const toggle = document.querySelector('[data-mobile-menu-toggle]') as HTMLButtonElement;
        if (toggle) {
          toggle.click();
          toggle.focus();
        }
      }
    }
  });

  // Smooth scroll for anchor links
  document.addEventListener('click', (e) => {
    const target = e.target as HTMLElement;
    const link = target.closest('a[href^="#"]') as HTMLAnchorElement;
    
    if (link && link.hash) {
      e.preventDefault();
      const targetElement = document.querySelector(link.hash);
      
      if (targetElement) {
        targetElement.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
        
        // Focus the target element for accessibility
        (targetElement as HTMLElement).focus();
      }
    }
  });
});
</script>
</html>


---
import BaseLayout from '../layouts/BaseLayout.astro';
import HandpanWidget from '../widgets/academy-handpan/ui/HandpanWidget';

const seoTitle = 'Academy - Handpan Memorization | Singapore Handpan Studio';
const seoDescription = 'Learn handpan fundamentals with our interactive memorization widget. Explore note positions, chord patterns, and scales for different handpan tunings.';
---

<BaseLayout 
  title={seoTitle}
  description={seoDescription}
  canonical={`${Astro.site}academy/`}
>
  <main class="academy-page">
    <div class="container">
      <section class="academy-hero">
        <h1 class="academy-hero__title">Handpan Academy</h1>
        <p class="academy-hero__description">
          Master handpan fundamentals with our interactive memorization widget. 
          Learn note positions, explore chord patterns, and discover scales for different handpan tunings.
        </p>
      </section>

      <section class="academy-widget-section">
        <HandpanWidget client:load />
      </section>
    </div>
  </main>
</BaseLayout>

<style lang="scss">
@use "src/styles/tokens.scss";

.academy-page {
  min-height: calc(100vh - var(--header-height) - var(--footer-height));
  padding: var(--spacing-2xl) 0;
  background: linear-gradient(135deg, var(--color-gray-50) 0%, var(--color-white) 100%);

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-md);
  }
}

.academy-hero {
  text-align: center;
  padding: var(--spacing-2xl) 0 var(--spacing-xl);
  margin-bottom: var(--spacing-xl);
}

.academy-hero__title {
  font-size: var(--font-size-4xl);
  font-weight: var(--font-weight-bold);
  color: var(--color-primary);
  margin-bottom: var(--spacing-lg);
  font-family: var(--font-family-heading);
}

.academy-hero__description {
  font-size: var(--font-size-xl);
  color: var(--color-text-secondary);
  max-width: 800px;
  margin: 0 auto;
  line-height: var(--line-height-relaxed);
}

.academy-widget-section {
  padding: var(--spacing-xl) 0;
  background: var(--color-white);
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-base);
  margin-bottom: var(--spacing-2xl);
}

@media (max-width: 768px) {
  .academy-hero__title {
    font-size: var(--font-size-3xl);
  }
  
  .academy-hero__description {
    font-size: var(--font-size-lg);
  }
}
</style>


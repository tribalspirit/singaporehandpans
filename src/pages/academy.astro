---
import BaseLayout from '../layouts/BaseLayout.astro';

const seoTitle = 'Academy - Coming Soon | Singapore Handpan Studio';
const seoDescription = 'Our comprehensive handpan learning academy is coming soon. Stay tuned for tutorials, courses, and resources for handpan players of all levels.';
---

<BaseLayout 
  title={seoTitle}
  description={seoDescription}
  canonical={`${Astro.site}academy/`}
>
  <main class="academy-page">
    <div class="container">
      <div class="coming-soon">
        <div class="coming-soon__icon">
          <svg width="120" height="120" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <circle cx="12" cy="12" r="10"/>
            <path d="M12 6v6l4 2"/>
          </svg>
        </div>
        
        <h1 class="coming-soon__title">Academy Coming Soon</h1>
        
        <p class="coming-soon__description">
          We're building something special for you! Our Handpan Academy will offer comprehensive learning materials, 
          interactive tutorials, and helpful widgets for handpan players at every level.
        </p>
        
        <div class="coming-soon__features">
          <div class="feature">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/>
              <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/>
            </svg>
            <h3>Learning Resources</h3>
            <p>Curated lessons and guides for beginners to advanced players</p>
          </div>
          
          <div class="feature">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/>
            </svg>
            <h3>Interactive Tools</h3>
            <p>Practice aids, metronomes, and scale references</p>
          </div>
          
          <div class="feature">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
              <circle cx="9" cy="7" r="4"/>
              <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
            </svg>
            <h3>Community Support</h3>
            <p>Connect with fellow learners and share your progress</p>
          </div>
        </div>
        
        <div class="coming-soon__cta">
          <p>Want to be notified when we launch?</p>
          <a href="/contacts" class="btn btn-primary">
            Get Notified
          </a>
        </div>
        
        <div class="coming-soon__alternative">
          <p>In the meantime, check out our:</p>
          <div class="alternative-links">
            <a href="/events" class="alternative-link">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                <line x1="16" y1="2" x2="16" y2="6"/>
                <line x1="8" y1="2" x2="8" y2="6"/>
                <line x1="3" y1="10" x2="21" y2="10"/>
              </svg>
              <span>Upcoming Events & Workshops</span>
            </a>
            <a href="/about" class="alternative-link">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <path d="M12 16v-4"/>
                <path d="M12 8h.01"/>
              </svg>
              <span>About Our Studio</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<style lang="scss">
@use "src/styles/tokens.scss";

.academy-page {
  min-height: calc(100vh - var(--header-height) - var(--footer-height));
  padding: var(--spacing-xxl) 0;
  background: linear-gradient(135deg, var(--color-gray-50) 0%, var(--color-white) 100%);

  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 var(--spacing-md);
  }
}

.coming-soon {
  text-align: center;
  padding: var(--spacing-xl) 0;
}

.coming-soon__icon {
  color: var(--color-primary);
  margin: 0 auto var(--spacing-xl);
  animation: pulse 2s ease-in-out infinite;
  
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.8;
      transform: scale(1.05);
    }
  }
}

.coming-soon__title {
  font-size: var(--font-size-4xl);
  font-weight: var(--font-weight-bold);
  color: var(--color-primary);
  margin-bottom: var(--spacing-lg);
  font-family: var(--font-family-heading);
}

.coming-soon__description {
  font-size: var(--font-size-xl);
  color: var(--color-text-secondary);
  max-width: 1200px;
  margin: 0 auto var(--spacing-xxl);
  line-height: var(--line-height-relaxed);
}

.coming-soon__features {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: var(--spacing-xl);
  margin-bottom: var(--spacing-xxl);
  text-align: center;
}

.feature {
  padding: var(--spacing-lg);
  background: var(--color-white);
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-base);
  transition: all var(--transition-base);
  
  &:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }
  
  svg {
    color: var(--color-accent);
    margin: 0 auto var(--spacing-md);
  }
  
  h3 {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-sm);
  }
  
  p {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    line-height: var(--line-height-normal);
  }
}

.coming-soon__cta {
  padding: var(--spacing-xl);
  background: linear-gradient(135deg, var(--color-primary-light), var(--color-primary));
  border-radius: var(--border-radius-lg);
  margin-bottom: var(--spacing-xxl);
  
  p {
    font-size: var(--font-size-lg);
    color: var(--color-white);
    margin-bottom: var(--spacing-md);
    font-weight: var(--font-weight-medium);
  }
}

.btn {
  display: inline-block;
  padding: var(--spacing-sm) var(--spacing-xl);
  border-radius: var(--border-radius-md);
  text-decoration: none;
  font-weight: var(--font-weight-semibold);
  font-size: var(--font-size-md);
  transition: all var(--transition-base);
  border: 2px solid transparent;
  
  &.btn-primary {
    background: var(--color-white);
    color: var(--color-primary);
    
    &:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow-lg);
    }
  }
}

.coming-soon__alternative {
  padding: var(--spacing-lg);
  
  > p {
    font-size: var(--font-size-md);
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-md);
  }
}

.alternative-links {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
  max-width: 400px;
  margin: 0 auto;
  
  @media (min-width: 768px) {
    flex-direction: row;
    max-width: 600px;
  }
}

.alternative-link {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  padding: var(--spacing-md);
  background: var(--color-white);
  border: 2px solid var(--color-gray-200);
  border-radius: var(--border-radius-md);
  text-decoration: none;
  color: var(--color-text-primary);
  transition: all var(--transition-base);
  
  &:hover {
    border-color: var(--color-primary);
    background: var(--color-gray-50);
    transform: translateY(-2px);
    
    svg {
      color: var(--color-primary);
    }
  }
  
  svg {
    flex-shrink: 0;
    color: var(--color-accent);
    transition: color var(--transition-base);
  }
  
  span {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    text-align: left;
  }
}

@media (max-width: 768px) {
  .coming-soon__title {
    font-size: var(--font-size-3xl);
  }
  
  .coming-soon__description {
    font-size: var(--font-size-lg);
  }
  
  .coming-soon__features {
    grid-template-columns: 1fr;
  }
}
</style>


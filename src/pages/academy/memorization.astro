---
import BaseLayout from '../../layouts/BaseLayout.astro';
import HandpanWidget from '../../widgets/academy-handpan/ui/HandpanWidget';

const seoTitle = 'Handpan Chord Explorer | Academy | Singapore Handpan Studio';
const seoDescription = 'Your interactive practice companion for handpan. Quickly find chord shapes, explore note patterns, and visualize scales across different handpan tunings. Perfect for both learning and practice sessions.';
---

<BaseLayout
  title={seoTitle}
  description={seoDescription}
  canonical={`${Astro.site}academy/memorization/`}
>
  <main class="chord-explorer-page">
    <div class="container">
      <nav class="breadcrumb">
        <a href="/academy">Academy</a>
        <span class="separator">/</span>
        <span>Chord Explorer</span>
      </nav>

      <section class="chord-explorer-hero">
        <h1 class="chord-explorer-hero__title">Handpan Chord Explorer</h1>
        <p class="chord-explorer-hero__description">
          Your interactive practice buddy! Quickly look up chord shapes, explore how notes fit together,
          and see your handpan's scale come alive. Perfect for those "wait, which notes are in that chord?" moments.
        </p>
      </section>

      <section class="chord-explorer-widget-section">
        <HandpanWidget client:load />
      </section>
    </div>
  </main>
</BaseLayout>

<style lang="scss">
@use "src/styles/tokens.scss";

.chord-explorer-page {
  min-height: calc(100vh - var(--header-height) - var(--footer-height));
  padding: var(--spacing-2xl) 0;
  background: linear-gradient(135deg, var(--color-gray-50) 0%, var(--color-white) 100%);

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-md);
  }
}

.breadcrumb {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-xl);
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);

  a {
    color: var(--color-primary);
    text-decoration: none;
    transition: color var(--transition-base);

    &:hover {
      color: var(--color-primary-dark);
      text-decoration: underline;
    }
  }

  .separator {
    color: var(--color-gray-400);
  }
}

.chord-explorer-hero {
  text-align: center;
  padding: var(--spacing-xl) 0;
  margin-bottom: var(--spacing-xl);
}

.chord-explorer-hero__title {
  font-size: var(--font-size-4xl);
  font-weight: var(--font-weight-bold);
  color: var(--color-primary);
  margin-bottom: var(--spacing-lg);
  font-family: var(--font-family-heading);
}

.chord-explorer-hero__description {
  font-size: var(--font-size-xl);
  color: var(--color-text-secondary);
  max-width: 800px;
  margin: 0 auto;
  line-height: var(--line-height-relaxed);
}

.chord-explorer-widget-section {
  padding: var(--spacing-xl) 0;
  background: var(--color-white);
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-base);
  margin-bottom: var(--spacing-2xl);
}

@media (max-width: 768px) {
  .chord-explorer-hero__title {
    font-size: var(--font-size-3xl);
  }

  .chord-explorer-hero__description {
    font-size: var(--font-size-lg);
  }
}
</style>

---
import BaseLayout from '../layouts/BaseLayout.astro';
import ShopProductList from '../components/ShopProductList';
import { fetchAllProducts, isShopEnabled } from '../lib/shopifyClient';
import type { ShopProduct } from '../lib/shopifyClient';

export const prerender = false;

if (!isShopEnabled()) {
  return Astro.redirect('/404');
}

let products: ShopProduct[] = [];
let error: Error | null = null;

try {
  products = await fetchAllProducts();
} catch (err) {
  console.error('Failed to fetch products:', err);
  error = err instanceof Error ? err : new Error('Unknown error');
}

const pageTitle = 'Shop';
const pageDescription =
  'Browse our collection of handpans and accessories. Find your perfect instrument from Singapore Handpan Studio.';
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <main class="shop-page">
    <section class="hero-section">
      <div class="container">
        <h1 class="page-title">Shop</h1>
        <p class="page-subtitle">
          Explore our curated collection of handpans and accessories
        </p>
      </div>
    </section>

    <section class="shop-section">
      <div class="container">
        {
          error ? (
            <div class="error-state">
              <p>Shop is temporarily unavailable. Please try again later.</p>
            </div>
          ) : products.length === 0 ? (
            <div class="empty-state">
              <p>No products available yet. Check back soon!</p>
            </div>
          ) : (
            <ShopProductList products={products} client:load />
          )
        }
      </div>
    </section>
  </main>
</BaseLayout>

<style lang="scss">
  .shop-page {
    min-height: 100vh;
  }

  .hero-section {
    background: linear-gradient(
      135deg,
      var(--color-primary-light) 0%,
      var(--color-accent-light) 100%
    );
    padding: var(--space-16) 0 var(--space-12);
    text-align: center;

    @media (max-width: 768px) {
      padding: var(--space-12) 0 var(--space-8);
    }
  }

  .page-title {
    font-size: var(--font-size-4xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-gray-900);
    margin-bottom: var(--space-4);
    line-height: var(--line-height-tight);

    @media (min-width: 768px) {
      font-size: var(--font-size-5xl);
    }
  }

  .page-subtitle {
    font-size: var(--font-size-lg);
    color: var(--color-gray-700);
    max-width: 600px;
    margin: 0 auto;
    line-height: var(--line-height-relaxed);

    @media (min-width: 768px) {
      font-size: var(--font-size-xl);
    }
  }

  .shop-section {
    padding: var(--space-16) 0;
    background: var(--color-gray-50);

    @media (max-width: 768px) {
      padding: var(--space-12) 0;
    }
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 var(--space-6);

    @media (max-width: 768px) {
      padding: 0 var(--space-4);
    }
  }

  .empty-state,
  .error-state {
    text-align: center;
    padding: var(--space-16);
    color: var(--color-gray-600);
    font-size: var(--font-size-lg);
  }

  .error-state {
    color: var(--color-error, var(--color-gray-600));
  }
</style>

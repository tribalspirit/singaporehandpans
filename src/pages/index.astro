---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';

const title = 'Home';
const description = 'Discover the healing sounds of handpan music through our academy, events, and community in Singapore. Join Singapore Handpan Studio in our journey of musical expression and mindful living.';
---

<BaseLayout title={title} description={description}>
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero__background">
      <div class="hero__overlay"></div>
    </div>
    
    <div class="container">
      <div class="hero__content">
        <h1 class="hero__title">
          Discover the Magic of 
          <span class="hero__highlight">Handpan Music</span>
        </h1>
        
        <p class="hero__subtitle">
          Experience the healing sounds and vibrations of handpan drums through our academy, 
          community events, and musical journeys in Singapore.
        </p>
        
        <div class="hero__actions">
          <a href="/academy" class="btn btn--primary">
            Explore Academy
          </a>
          <a href="/events" class="btn btn--outline">
            Upcoming Events
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- About Preview Section -->
  <section class="section about-preview">
    <div class="container">
      <div class="about-preview__grid">
        <div class="about-preview__content">
          <h2 class="section__title">Our Musical Journey</h2>
          <p class="about-preview__text">
            At Singapore Handpan Studio, we believe in the transformative power of music. 
            Our handpan instruments create soothing, meditative sounds that promote healing, 
            relaxation, and mindful living.
          </p>
          
          <p class="about-preview__text">
            Whether you're a complete beginner or an experienced musician, our academy 
            and community events provide a welcoming space to explore this beautiful instrument.
          </p>
          
          <a href="/about" class="btn btn--text">
            Learn More About Us
            <svg class="btn__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path d="m9 18 6-6-6-6"/>
            </svg>
          </a>
        </div>
        
        <div class="about-preview__image">
          <img 
            src="/images/handpan-player.jpg" 
            alt="Person playing handpan in a peaceful setting"
            class="about-preview__img"
            loading="lazy"
            width="600"
            height="400"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Services Preview -->
  <section class="section services-preview">
    <div class="container">
      <h2 class="section__title section__title--center">What We Offer</h2>
      
      <div class="services-grid">
        <div class="service-card">
          <div class="service-card__icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 11H5a2 2 0 0 0-2 2v3a2 2 0 0 0 2 2h4l5 4V7l-5 4Z"/>
              <path d="m15.54 8.46 5 5"/>
              <path d="m20.54 8.46-5 5"/>
            </svg>
          </div>
          
          <h3 class="service-card__title">Academy</h3>
          <p class="service-card__description">
            Access learning resources, tutorials, and interactive tools for handpan players of all levels.
          </p>
          <a href="/academy" class="service-card__link">Explore Academy</a>
        </div>
        
        <div class="service-card">
          <div class="service-card__icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect width="18" height="18" x="3" y="4" rx="2" ry="2"/>
              <line x1="16" x2="16" y1="2" y2="6"/>
              <line x1="8" x2="8" y1="2" y2="6"/>
              <line x1="3" x2="21" y1="10" y2="10"/>
            </svg>
          </div>
          
          <h3 class="service-card__title">Events</h3>
          <p class="service-card__description">
            Join our community events, performances, and special gatherings celebrating handpan music.
          </p>
          <a href="/events" class="service-card__link">View Events</a>
        </div>
        
        <div class="service-card">
          <div class="service-card__icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
              <polyline points="9,22 9,12 15,12 15,22"/>
            </svg>
          </div>
          
          <h3 class="service-card__title">Community</h3>
          <p class="service-card__description">
            Connect with fellow musicians and enthusiasts in our welcoming community space.
          </p>
          <a href="/contacts" class="service-card__link">Join Us</a>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2 class="cta__title">Ready to Start Your Musical Journey?</h2>
        <p class="cta__subtitle">
          Explore our academy or join our next community event. Everyone is welcome!
        </p>
        
        <div class="cta__actions">
          <a href="/contacts#booking" class="btn btn--primary btn--large">
            Book a Session
          </a>
          <a href="/events" class="btn btn--outline btn--large">
            View Events
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style lang="scss">
// Hero Section
.hero {
  position: relative;
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: var(--color-white);
  overflow: hidden;
}

.hero__background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
  z-index: 1;
}

.hero__overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 2;
}

.hero__content {
  position: relative;
  z-index: 3;
  max-width: 800px;
  margin: 0 auto;
  padding: var(--space-8);
}

.hero__title {
  font-size: var(--font-size-4xl);
  font-weight: var(--font-weight-bold);
  margin-bottom: var(--space-6);
  line-height: var(--line-height-tight);

  @media (min-width: 768px) {
    font-size: var(--font-size-5xl);
  }
}

.hero__highlight {
  color: var(--color-accent-light);
}

.hero__subtitle {
  font-size: var(--font-size-lg);
  line-height: var(--line-height-relaxed);
  margin-bottom: var(--space-8);
  opacity: 0.9;

  @media (min-width: 768px) {
    font-size: var(--font-size-xl);
  }
}

.hero__actions {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
  align-items: center;

  @media (min-width: 640px) {
    flex-direction: row;
    justify-content: center;
  }
}

// About Preview Section
.about-preview__grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: var(--space-12);
  align-items: center;

  @media (min-width: 768px) {
    grid-template-columns: 1fr 1fr;
    gap: var(--space-16);
  }
}

.about-preview__text {
  font-size: var(--font-size-base);
  line-height: var(--line-height-relaxed);
  color: var(--color-gray-600);
  margin-bottom: var(--space-4);
}

.about-preview__img {
  width: 100%;
  height: auto;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-lg);
}

// Services Grid
.services-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: var(--space-8);
  margin-top: var(--space-12);

  @media (min-width: 640px) {
    grid-template-columns: repeat(2, 1fr);
  }

  @media (min-width: 1024px) {
    grid-template-columns: repeat(3, 1fr);
  }
}

.service-card {
  background: var(--color-white);
  border-radius: var(--radius-lg);
  padding: var(--space-8);
  text-align: center;
  box-shadow: var(--shadow-md);
  transition: all var(--transition-fast);

  &:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }
}

.service-card__icon {
  width: 64px;
  height: 64px;
  margin: 0 auto var(--space-4);
  color: var(--color-primary);

  svg {
    width: 100%;
    height: 100%;
  }
}

.service-card__title {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-semibold);
  margin-bottom: var(--space-3);
  color: var(--color-gray-900);
}

.service-card__description {
  font-size: var(--font-size-base);
  color: var(--color-gray-600);
  line-height: var(--line-height-relaxed);
  margin-bottom: var(--space-6);
}

.service-card__link {
  color: var(--color-primary);
  font-weight: var(--font-weight-medium);
  text-decoration: none;
  
  &:hover {
    text-decoration: underline;
  }
}

// CTA Section
.cta-section {
  background-color: var(--color-gray-50);
  text-align: center;
}

.cta-content {
  max-width: 600px;
  margin: 0 auto;
}

.cta__title {
  font-size: var(--font-size-3xl);
  font-weight: var(--font-weight-bold);
  margin-bottom: var(--space-4);
  color: var(--color-gray-900);
}

.cta__subtitle {
  font-size: var(--font-size-lg);
  color: var(--color-gray-600);
  line-height: var(--line-height-relaxed);
  margin-bottom: var(--space-8);
}

.cta__actions {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
  align-items: center;
  padding: var(--space-8);

  @media (min-width: 640px) {
    flex-direction: row;
    justify-content: center;
  }
}

// Button Styles
.btn {
  display: inline-flex;
  align-items: center;
  gap: var(--space-2);
  padding: var(--space-3) var(--space-6);
  border-radius: var(--radius-md);
  font-weight: var(--font-weight-medium);
  text-decoration: none;
  transition: all var(--transition-fast);
  cursor: pointer;
  border: none;
  font-size: var(--font-size-base);
  
  &:focus {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }
  
  &--primary {
    background-color: var(--color-primary);
    color: var(--color-white);
    
    &:hover {
      background-color: var(--color-primary-dark);
    }
  }
  
  &--outline {
    background-color: transparent;
    color: var(--color-primary);
    border: 2px solid var(--color-primary);
    
    &:hover {
      background-color: var(--color-primary);
      color: var(--color-white);
    }
  }
  
  &--text {
    background-color: transparent;
    color: var(--color-primary);
    padding: var(--space-2) 0;
    
    &:hover {
      color: var(--color-primary-dark);
    }
  }
  
  &--large {
    padding: var(--space-4) var(--space-8);
    font-size: var(--font-size-lg);
  }
}

.btn__icon {
  width: 16px;
  height: 16px;
  stroke-width: 2;
}

// Section Styles
.section {
  padding: var(--space-16) 0;
  
  @media (min-width: 768px) {
    padding: var(--space-24) 0;
  }
}

.section__title {
  font-size: var(--font-size-3xl);
  font-weight: var(--font-weight-bold);
  margin-bottom: var(--space-8);
  color: var(--color-gray-900);
  
  &--center {
    text-align: center;
  }
}
</style>

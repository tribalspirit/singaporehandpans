{
  "name": "event",
  "display_name": "Event",
  "schema": {
    "title": {
      "type": "text",
      "pos": 0,
      "required": true,
      "description": "Event title"
    },
    "description": {
      "type": "textarea",
      "pos": 1,
      "required": true,
      "description": "Event description"
    },
    "date": {
      "type": "datetime",
      "pos": 2,
      "required": true,
      "description": "Event date and time"
    },
    "location": {
      "type": "text",
      "pos": 3,
      "required": true,
      "default_value": "Singapore Handpan Studio",
      "description": "Event location"
    },
    "price": {
      "type": "text",
      "pos": 4,
      "required": false,
      "description": "Event price (e.g., S$120, Free)"
    },
    "booking_url": {
      "type": "text",
      "pos": 5,
      "required": false,
      "description": "Calendly or booking link URL"
    },
    "image": {
      "type": "asset",
      "pos": 6,
      "required": false,
      "filetypes": ["images"],
      "description": "Event featured image"
    },
    "tags": {
      "type": "options",
      "pos": 7,
      "required": false,
      "options": [
        { "name": "Workshop", "value": "workshop" },
        { "name": "Performance", "value": "performance" },
        { "name": "Community", "value": "community" },
        { "name": "Beginner", "value": "beginner" },
        { "name": "Intermediate", "value": "intermediate" },
        { "name": "Advanced", "value": "advanced" },
        { "name": "Private", "value": "private" }
      ],
      "description": "Event categories (multiple allowed)"
    },
    "status": {
      "type": "option",
      "pos": 8,
      "required": true,
      "default_value": "upcoming",
      "options": [
        { "name": "Upcoming", "value": "upcoming" },
        { "name": "Past", "value": "past" },
        { "name": "Cancelled", "value": "cancelled" }
      ],
      "description": "Event status"
    },
    "availability_status": {
      "type": "option",
      "pos": 9,
      "required": false,
      "default_value": "available",
      "options": [
        { "name": "Available", "value": "available" },
        { "name": "Few Spots Left", "value": "few_spots" },
        { "name": "Sold Out", "value": "sold_out" }
      ],
      "description": "Availability status shown on event cards"
    },
    "max_participants": {
      "type": "number",
      "pos": 10,
      "required": false,
      "description": "Maximum number of participants"
    },
    "seo_title": {
      "type": "text",
      "pos": 11,
      "required": false,
      "description": "SEO title override"
    },
    "seo_description": {
      "type": "textarea",
      "pos": 12,
      "required": false,
      "max_length": 160,
      "description": "SEO meta description"
    }
  },
  "image": null,
  "preview_field": "title",
  "is_root": true,
  "preview_tmpl": null,
  "is_nestable": false,
  "all_presets": [],
  "preset_id": null,
  "real_name": "event",
  "component_group_uuid": null
}
